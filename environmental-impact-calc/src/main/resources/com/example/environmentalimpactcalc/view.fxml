<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="655.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.environmentalimpactcalc.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="questionText" prefHeight="221.0" prefWidth="574.0" wrapText="true">
      <font>
         <Font name="Comic Sans MS" size="37.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label fx:id="sliderValue" prefHeight="39.0" prefWidth="45.0" text="1">
            <HBox.margin>
               <Insets right="40.0" />
            </HBox.margin>
            <font>
               <Font size="26.0" />
            </font>
         </Label>
         <Slider fx:id="slider" majorTickUnit="1.0" max="10.0" min="1.0" minorTickCount="0" showTickMarks="true" value="1.0" />
         <Button fx:id="nextQuestion" mnemonicParsing="false" onAction="#nextQuestion" text="Next!">
            <HBox.margin>
               <Insets left="50.0" />
            </HBox.margin>
         </Button>
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
</VBox>
